<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SearchView
            android:id="@+id/searchView"
            android:iconifiedByDefault="true"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:queryHint="Buscar campañas" />

        <ImageButton
            android:id="@+id/imageButtonMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/searchView"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_menu_24"
            tools:src="@drawable/ic_baseline_menu_24" />

        <LinearLayout
            android:id="@+id/linearLayoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/allCamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Todas las campañas"
                android:textAlignment="center"
                android:textSize="10sp" />

            <Button
                android:id="@+id/actualCamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Campañas Actuales"
                android:textAlignment="center"
                android:textSize="10sp" />

            <Button
                android:id="@+id/futureCamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Proximas campañas"
                android:textAlignment="center"
                android:textSize="10sp" />
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="629dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp">

                    <TextView
                        android:id="@+id/textViewTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/imageViewAgricultor"
                        android:text="MERCADO CAMPESINO # "
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewGuest"
                        android:layout_width="219dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewTitleCounter"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@+id/imageViewAgricultor"
                        android:text="Varios agricultores invitados de toda la region sur, contamos con 10 puestos bien ubicados."
                        android:textSize="10sp"
                        android:textStyle="italic" />


                    <ImageButton
                        android:id="@+id/imageButtonMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageButton"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@+id/imageButton"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_mapa_icon" />

                    <ImageView
                        android:id="@+id/imageViewAgricultor"
                        android:layout_width="114dp"
                        android:layout_height="106dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_farmer_worker"
                        tools:srcCompat="@drawable/ic_farmer_worker" />

                    <TextView
                        android:id="@+id/textViewTitleCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_toEndOf="@+id/textViewTitle2"
                        android:inputType="number"
                        android:text="1"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewLugar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewGuest"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@+id/imageViewAgricultor"
                        android:text="Lugar: "
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewLugar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textViewLugar"
                        android:layout_alignBottom="@+id/textViewLugar"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="0dp"
                        android:layout_toEndOf="@+id/textViewLugar"
                        android:text="Parque El Divino Niño"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textViewDir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewLugar"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/imageViewAgricultor"
                        android:text="Direccion: "
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewDir2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textViewDir"
                        android:layout_alignBottom="@+id/textViewDir"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="0dp"
                        android:layout_toEndOf="@+id/textViewDir"
                        android:text="Cra 32 #63a-15"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textViewMail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageViewAgricultor"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:text="Correo: "
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textViewMail2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textViewMail"
                        android:layout_alignBottom="@+id/textViewMail"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="211dp"
                        android:layout_marginBottom="0dp"
                        android:layout_toEndOf="@+id/textViewMail"
                        android:inputType="textEmailAddress"
                        android:text="agricultor@agricultor.com"
                        android:textColor="#3437F6"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textViewTele"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewMail"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:text="Telefono: "
                        android:textSize="10sp" />


                    <TextView
                        android:id="@+id/textViewTele2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textViewTele"
                        android:layout_alignBottom="@+id/textViewTele"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="141dp"
                        android:layout_marginBottom="0dp"
                        android:layout_toEndOf="@+id/textViewTele"
                        android:text="3001234567"
                        android:textSize="10sp" />

                    <ImageButton
                        android:id="@+id/imageButtonWp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageButtonMap"
                        android:layout_alignBottom="@+id/imageButtonMap"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="0dp"
                        android:layout_toStartOf="@+id/imageButtonMap"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_whp_icon" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="8dp"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_favorite"
                        app:tint="#000000" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        style="@style/Widget.MaterialComponents.BottomNavigationView.Colored"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        app:menu="@menu/bottom_navigation_menu" />




</LinearLayout>

